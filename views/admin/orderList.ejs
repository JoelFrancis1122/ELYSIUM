<body>
  <div class="screen-overlay"></div>
  <%-include('../partials/adminAside')-%>
    <main class="main-wrap">
      <%-include('../partials/adminHeader')-%>
        <section class="content-main">
          <div class="content-header">
            <div>
              <h2 class="content-title card-title">Order List</h2>
              <p>Lorem ipsum dolor sit amet.</p>
            </div>

          </div>
          <div class="card mb-4">

            <!-- card-header end// -->
            <div class="card-body">
              <div class="table-responsive">



                <table class="table table-hover" id="example">
                  <% if(orders && orders.length> 0 ){ %>

                    <thead>
                      <tr>
                        <th>ID</th>
                        <th>Total Amount</th>
                        <th>Payment Method</th>
                        <th>Date && Time</th>
                        <th>Payment Status</th>
                        <th>Order Status</th>
                        <th>Change Status</th>
                        <th class="text-end">Order Details</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% orders.forEach(order=> { %>
                        <tr>
                          <td>
                            <%= order.orderId %>
                          </td>
                          <td>
                            $<%= order.totalAmount %>
                          </td>
                          <td>
                            <%= order.paymentMethod %>
                          </td>
                          <td>
                            <%= order.orderDate.toLocaleString() %>
                          </td>
                          <td>
                            <span class="badge <%= order.paymentStatus === 'Received' ? 'bg-success-light' : 'bg-warning-light' %> text-dark">
                              <%= order.paymentStatus %>
                            </span>
                          </td>
                          
                            <td>
                              <span class="badge <%= order.orderStatus === 'Shipped' ? 'bg-primary-light' : (order.orderStatus === 'Returned' ? 'bg-secondary-light' : (order.orderStatus === 'Cancelled' ? 'bg-danger-light' : (order.orderStatus === 'Delivered' ? 'bg-success-light' : 'bg-warning-light'))) %> text-dark">
                                <%= order.orderStatus %>
                              </span>
                          </td>
                          <td>
                              <div class="dropdown">
                                  <button class="btn btn-sm btn-icon dropdown-toggle" type="button"
                                      id="deliveryStatusDropdown_<%= order._id %>" data-bs-toggle="dropdown" aria-expanded="false"
                                      <% if (order.orderStatus === 'Delivered' || order.orderStatus === 'Returned' || order.orderStatus === 'Cancelled') { %>
                                          disabled
                                      <% } %>
                                    <b>Status</b>  
                                  </button>
                          
                                  <ul class="dropdown-menu dropdown-menu-sm" aria-labelledby="deliveryStatusDropdown_<%= order._id %>">
                                      <li><a class="dropdown-item"
                                              href="/admin/adminOrderpending?id=<%= order._id %>">Order Placed</a></li>
                                      <li><a class="dropdown-item"
                                              href="/admin/adminOrderShipped?id=<%= order._id %>">Shipped</a></li>
                                      <li><a class="dropdown-item"
                                              href="/admin/adminOrderDelivered?id=<%= order._id %>">Delivered</a></li>
                                      <li><a class="dropdown-item"
                                              href="/admin/adminOrderCancelled?id=<%= order._id %>">Cancelled</a></li>
                                      <li><a class="dropdown-item"
                                              href="/admin/adminOrderReturned?id=<%= order._id %>">Returned</a></li>
                                  </ul>
                              </div>
                          </td>
                          
              <td class="text-end">
                <a href="/admin/loadOrderDetails?id=<%=order._id%>" class="btn btn-sm btn-outline-dark">Order Detail</a>
              </td>
              </tr>
              <% }); %>
                <% }else{ %>
                  <h3 style="font-size: 28px; font-weight: bold; color: #000000; text-transform: uppercase; border-bottom: 2px solid #007bff; padding-bottom: 5px;">No orders found</h3>
                  <% } %>

                    </table>



            </div>
            <!-- table-responsive //end -->
          </div>
          <!-- card-body end// -->
          </div>
          <!-- card end// -->

        </section>
        <!-- content-main end// -->
        <footer class="main-footer font-xs">
          <div class="row pb-30 pt-15">
            <div class="col-sm-6">
              <script data-cfasync="false"
                src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
              <script>
                document.write(new Date().getFullYear());
              </script>
