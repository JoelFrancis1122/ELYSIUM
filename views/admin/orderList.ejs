    <script>
      document.addEventListener("DOMContentLoaded", function() {
          const selectElements = document.querySelectorAll("select.form-select");
  
          selectElements.forEach(selectElement => {
              selectElement.addEventListener("change", function() {
                  const selectedOption = selectElement.options[selectElement.selectedIndex].text;
                  const orderStatusCell = selectElement.closest("tr").querySelector("td:nth-child(7) span");
  
                  // Remove all existing classes
                  orderStatusCell.classList.remove("bg-warning", "bg-success", "bg-info", "bg-danger", "text-dark", "text-white");
  
                  // Set new classes based on selected option
                  switch(selectedOption) {
                      case "Shipped":
                          orderStatusCell.classList.add("bg-info", "text-white");
                          break;
                      case "Delivered":
                      orderStatusCell.classList.add("bg-success", "text-white");
                         
                          break;
                      case "Cancelled":
                          orderStatusCell.classList.add("bg-danger", "text-white");
                          break;
                      default:
                          orderStatusCell.classList.add("bg-warning", "text-dark");
                          break;
                  }
  
                  // Update order status cell text
                  orderStatusCell.textContent = selectedOption;
              });
          });
      });
  </script>
  
