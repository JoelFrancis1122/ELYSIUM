    <script>
      function confirmBlock(categoryId) {
          Swal.fire({
              title: 'Are you sure?',
              text: "You are about to block this category!",
              icon: 'warning',
              showCancelButton: true,
              confirmButtonColor: '#d33',
              cancelButtonColor: '#3085d6',
              confirmButtonText: 'Yes, block it!'
          }).then((result) => {
              if (result.isConfirmed) {
                  // If user clicks "Yes", redirect to the blockCategories route
                  window.location.href = `/admin/ToggleblockCategories?catid=${categoryId}`;
              }
          });
      }
  </script>
  <script>
    function confirmUnBlock(categoryId) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You are about to Unblock this category!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, Unblock it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // If user clicks "Yes", redirect to the blockCategories route
                window.location.href = `/admin/ToggleblockCategories?catid=${categoryId}`;
            }
        });
    }
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>




<script>
  document.addEventListener("DOMContentLoaded", function() {
      const form = document.querySelector("form[action='/admin/addCategories']");
      const categoryNameInput = form.querySelector("input[name='categoryName']");

      form.addEventListener("submit", function(event) {
          const inputValue = categoryNameInput.value.trim(); // Trim whitespace from the input value

          if (inputValue === "") {
              event.preventDefault(); // Prevent form submission
              toastr.warning("Category name cannot be empty."); // Display toastr warning message
          } else if (!inputValue.replace(/\s/g, '').length) {
              event.preventDefault(); // Prevent form submission
              toastr.warning("Category name cannot contain only spaces."); // Display toastr warning message
          }
      });
  });
</script>
