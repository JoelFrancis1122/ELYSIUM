  <body>
    <div class="screen-overlay"></div>
    <%-include('../partials/adminAside')-%>
    <main class="main-wrap">
      <%-include('../partials/adminHeader')-%>
      <section class="content-main">
        <div class="content-header">
          <div>
            <h2 class="content-title card-title">Coupon</h2>
            <p>Give offeres use copons</p>
          </div>
          <div>
            <input
              type="text"
              placeholder="Search Categories"
              class="form-control bg-white"
            />
          </div>
          <% if (messages.success) { %>
            <div class="alert alert-success" id="editSuccessMessage">
                <%= messages.success %>
            </div>
        <% } else if (messages.error) { %>
            <div class="alert alert-danger" id="editErrorMessage">
                <%= messages.error %>
            </div>
         <% } %>
        </div>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                <form method="post" action="/admin/addCoupon">
                


                  <div class="mb-4">
                    <label for="product_name" class="form-label"
                      >Coupon Name</label
                    >
                    <input
                      type="text"
                      placeholder="Type here"
                      name="couponName"
                      class="form-control"
                    />
                  </div>


                  <div class="mb-4">
                    <label for="product_name" class="form-label"
                      >Coupon Code</label
                    >
                    <input

                      type="text"
                      placeholder="Type here"
                      name="couponCode"
                      class="form-control"
                    />
                  </div>

                  <div class="mb-4">
                    <label for="product_name" class="form-label"
                      >Minimum Purchase</label
                    >
                    <input
                      type="number"
                      placeholder="Type here"
                      name="minimumPurchase"
                      class="form-control"
                      min=0
                    />
                  </div>


                  <div class="mb-4">
                    <label for="product_name" class="form-label"
                      >Discount %</label
                    >
                    <input
                      type="number"
                      placeholder="Type here"
                      name="discountAmount"
                      class="form-control"
                      min="0"
                    />
                  </div>

                  <div class="mb-4">
                    <label for="product_name" class="form-label"
                      >Maximum Uses</label
                    >
                    <input
                      type="number"
                      placeholder="Type here"
                      name="maximumUses"
                      class="form-control"
                      min="1"
                    />
                  </div>
                  
                  <div class="mb-4">
                    <label for="expiration_date" class="form-label">Expiration Date</label>
                    <input type="date" name="expirationDate" class="form-control" id="expiration_date">
                </div>
                

                  <div class="d-grid">
                    <button class="btn btn-primary" type="submit">
                      Create coupon
                    </button>
                  </div>
                </form>
              </div>
              <div class="col-md-9">
                <div class="table-responsive">

             <% if(couponData && couponData.length > 0 ) { %>
              
         

              <table class="table table-hover">
                <thead>
                  <tr>
                    <th class="text-center">
                      <div class="form-check"></div>
                    </th>
                    <th>No</th>
                    <th>Category name</th>
                    <th>Discount %</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i = 0; i < couponData.length; i++) { %>
                  <tr>
                    <td class="text-center">
                      <div class="form-check"></div>
                    </td>
                    <td><%= i + 1 %></td>
                    <td><b><%= couponData[i].couponName %></b></td>
                    <td><b><%= couponData[i].discountAmount %>%</b></td>
                    <td>
                      <% if (couponData[i].isActive) { %>
                      <span class="badge rounded-pill alert-success">Active</span>
                      <% } else { %>
                      <span class="badge rounded-pill alert-danger">Blocked</span>
                      <% } %>
                    </td>
                    <td>
                      <% if(couponData[i].isActive) { %>
                      <a href="/admin/ToggleblockCoupon?Couid=<%= couponData[i]._id %>"
                        class="btn btn-sm font-sm btn-light rounded"
                        style="background-color: rgb(255, 0, 0); transition: background-color 0.3s;"
                      >
                        <i class="material-icons md-delete_forever"></i>
                        <b>Block</b>
                      </a>
                      <% } else { %>
                      <a href="/admin/ToggleblockCoupon?Couid=<%= couponData[i]._id %>"
                        class="btn btn-sm font-sm btn-light rounded"
                        style="background-color: #088178; transition: background-color 0.3s;"
                      >
                        <i class="material-icons md-delete_forever"></i>
                        Unblock
                      </a>
                      <% } %>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
              
                  <% } %>
           
                </div>
              </div>
            </div>
          </div>
        </div>




        <!-- card .// -->
      </section>
      <!-- content-main end// -->
