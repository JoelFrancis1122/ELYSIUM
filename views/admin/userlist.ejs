                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(let i = 0 ; i < users.length ; i++) { %>
                    <tr class="align-middle">
                      <td class="align-middle">
                        <h6 class="mb-0"><%=i+1%></h6>
                      </td>
                      <td class="align-middle">
                        <h6 class="mb-0"><%=users[i].name%></h6>
                      </td>
                      <td class="align-middle"><%=users[i].email%></td>
                      <td class="align-middle"><%=users[i].mobile%></td>
                      <td class="align-middle">
                        <% if (users[i].is_active) { %>
                        <span class="badge rounded-pill alert-success"
                          >Active</span
                        >
                        <% } else { %>
                        <span class="badge rounded-pill alert-danger"
                  >Blocked</span
                        >
                        <% } %>
                      </td>
                      <td class="align-middle">
                        <% if (users[i].is_active) { %>
                        <a
                          href="#"
                          onclick="confirmBlock('<%= users[i]._id %>')"
                          class="btn btn-sm font-sm btn-light rounded"
                          style="
                            background-color: rgb(255, 0, 0);
                            transition: background-color 0.3s;
                          "
                        >
                          <i class="material-icons md-delete_forever"></i> Block
                        </a>

                        <% } else { %>
                        <a
                          href="#"
                          onclick="confirmUnblock('<%= users[i]._id %>')"
                          class="btn btn-sm font-sm btn-light rounded"
                          style="
                            background-color: #088178;
                            transition: background-color 0.3s;
                          "
                        >
                          <i class="material-icons md-delete_forever"></i>
                          Unblock
                        </a>
                        <% } %>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
            <% } %>
