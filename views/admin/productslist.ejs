    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="/public/admin-assets/imgs/theme/favicon.svg"
    />
    <!-- Template CSS -->
    <link
      href="/public/admin-assets/css/main.css"
      rel="stylesheet"
      type="text/css"
